@page "/news/create"
<h3>Create news</h3>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label for="Name" class="control-label">@nameof(CreateNewsModel.Titr)</label>
            <input for="Name" class="form-control" @bind="@model.Titr" />
        </div>
        <div class="form-group mt-2">
            <label for="Name" class="control-label">Category</label>
            <select class="form-select" aria-label="Select category" @bind="@SelectedCategories" multiple>
                @foreach (var category in categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>
        <div class="form-group mt-2">
            <input type="button" value="Create" @onclick="@Create" class="btn btn-primary" />
            <input type="button" value="Cancel" @onclick="@Cancel" class="btn btn-light" />
        </div>
    </div>
</div>
