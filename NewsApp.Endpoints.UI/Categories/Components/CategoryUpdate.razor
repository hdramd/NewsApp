@page "/category/update/{CategoryId}"
<h3>CategoryCreate</h3>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind="@model.Name" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Update" @onclick="@Update" class="btn btn-primary" />
                <input type="submit" value="Cancel" @onclick="@Cancel" class="btn btn-light" />
            </div>
        </form>
    </div>
</div>
