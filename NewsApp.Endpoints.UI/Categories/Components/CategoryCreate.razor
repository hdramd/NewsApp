@page "/category/create"
<h3>CategoryCreate</h3>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind="@model.Name" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" @onclick="@Create">Save</button>
                <button class="btn btn-close" @onclick="@Cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>
