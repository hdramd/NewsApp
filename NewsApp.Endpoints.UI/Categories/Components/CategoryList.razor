@page "/category"
@inject ICategoryService EmployeeService
@inject Microsoft.AspNetCore.Components.NavigationManager navigation


<PageTitle>Category list</PageTitle>

<h1>Category list</h1>

<p>This component demonstrates the list of categories</p>
<button class="btn btn-primary" @onclick="@(() => navigation.NavigateTo("/category/create"))">Create</button>
<hr />
@if (pagedData == null)
{
    <p><em>Loading...</em></p>
    <p>@error</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@nameof(CategoryDto.Id)</th>
                <th>@nameof(CategoryDto.BusinessId)</th>
                <th>@nameof(CategoryDto.Name)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in pagedData.QueryResult)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.BusinessId</td>
                    <td>@category.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

